# ============================================================================
# SECURITY CRITICAL: Database Configuration
# ============================================================================
# IMPORTANT: DATABASE_URL MUST include SSL/TLS parameters for production
# Minimum: ?sslmode=require
# Recommended: ?sslmode=verify-full&sslrootcert=/path/to/ca.crt
# Generate secure credentials and update these values
DATABASE_URL=postgresql://user:password@db:5432/valuedb?sslmode=require
DB_USER=user
DB_PASSWORD=CHANGE_ME_IN_PRODUCTION
DB_HOST=db
DB_PORT=5432
DB_NAME=valuedb
DATABASE_CA_CERT_PATH=/etc/ssl/certs/ca-bundle.crt

POSTGRES_DB=valuedb
POSTGRES_USER=user
POSTGRES_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ============================================================================
# Redis Configuration (Update password in production)
# ============================================================================
REDIS_URL=redis://redis:6379
REDIS_PASSWORD=CHANGE_ME_IN_PRODUCTION

# ============================================================================
# Application Configuration
# ============================================================================
NODE_ENV=development
PYTHONUNBUFFERED=1

# ============================================================================
# SECURITY CRITICAL: Authentication
# ============================================================================
# IMPORTANT: JWT_SECRET_KEY MUST be set to a secure value
# Generate with: python -c 'import secrets; print(secrets.token_urlsafe(32))'
# NEVER use the placeholder value in production
JWT_SECRET_KEY=GENERATE_SECURE_KEY_AND_SET_IN_PRODUCTION
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# SECURITY: API Keys (DO NOT commit actual keys)
# ============================================================================
# Use environment-specific secret management (Vault, AWS Secrets Manager, etc.)
# Never commit actual API keys to version control
OPENAI_API_KEY=sk_test_PLACEHOLDER_ONLY
ANTHROPIC_API_KEY=sk_test_PLACEHOLDER_ONLY
GOOGLE_AI_API_KEY=PLACEHOLDER_ONLY
TOGETHER_API_KEY=PLACEHOLDER_ONLY

# ============================================================================
# Salesforce Configuration (Update with actual credentials)
# ============================================================================
SALESFORCE_USERNAME=your_salesforce_username
SALESFORCE_PASSWORD=CHANGE_ME_IN_PRODUCTION
SALESFORCE_SECURITY_TOKEN=CHANGE_ME_IN_PRODUCTION
SALESFORCE_DOMAIN=login

# AWS Configuration (if needed)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1

# Feature Flags
ENABLE_DEBUG_MODE=true
ENABLE_TELEMETRY=false
