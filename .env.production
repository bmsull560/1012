# ====================
# Production Environment Configuration
# ====================

# Database Configuration
DB_HOST=your-production-db.amazonaws.com
DB_PORT=5432
DB_USER=valueverse_prod
DB_PASSWORD=CHANGE_THIS_STRONG_PASSWORD
DB_NAME=valueverse_production
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}?sslmode=require

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-production-service-role-key

# Redis Configuration
REDIS_URL=redis://your-redis-cluster.cache.amazonaws.com:6379/0
RATE_LIMIT_REDIS_URL=${REDIS_URL}
CACHE_REDIS_URL=${REDIS_URL}

# Service URLs
NEXT_PUBLIC_API_URL=https://api.valueverse.com
NEXT_PUBLIC_WS_URL=wss://api.valueverse.com
VALUE_ARCHITECT_URL=https://architect.valueverse.com
VALUE_COMMITTER_URL=https://committer.valueverse.com
VALUE_EXECUTOR_URL=https://executor.valueverse.com
BILLING_SERVICE_URL=https://billing.valueverse.com

# Security
JWT_SECRET=CHANGE_THIS_64_CHAR_PRODUCTION_SECRET_KEY_MUST_BE_VERY_STRONG
SESSION_SECRET=CHANGE_THIS_PRODUCTION_SESSION_SECRET_KEY
ENCRYPTION_KEY=CHANGE_THIS_32_CHAR_ENCRYPTION_KEY
API_KEY_SALT=CHANGE_THIS_PRODUCTION_API_KEY_SALT

# CORS Configuration
CORS_ALLOWED_ORIGINS=https://valueverse.com,https://www.valueverse.com,https://app.valueverse.com

# Rate Limiting
RATE_LIMIT_CALLS=100
RATE_LIMIT_PERIOD=60
RATE_LIMIT_ENABLED=true

# Monitoring
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
GRAFANA_API_KEY=your-grafana-cloud-api-key
PROMETHEUS_PUSHGATEWAY_URL=https://prometheus-pushgateway.valueverse.com

# External Services
OPENAI_API_KEY=sk-prod-your-openai-key
STRIPE_SECRET_KEY=sk_live_your-stripe-key
STRIPE_WEBHOOK_SECRET=whsec_your-webhook-secret
SENDGRID_API_KEY=SG.your-sendgrid-key

# Feature Flags
ENABLE_ANALYTICS=true
ENABLE_MONITORING=true
ENABLE_ERROR_TRACKING=true
MAINTENANCE_MODE=false

# Deployment
ENVIRONMENT=production
NODE_ENV=production
LOG_LEVEL=info
