# ============================================================================
# ValueVerse Platform - Environment Configuration Template
# ============================================================================
# Copy this file to .env and customize values for your environment
# ============================================================================

# ====================
# Environment Settings
# ====================
NODE_ENV=development
LOG_LEVEL=info
DEBUG=false

# ====================
# Database Configuration
# ====================
DB_HOST=postgres
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=postgres
DB_NAME=valueverse
DATABASE_URL=postgresql://${DB_USER}:${DB_PASSWORD}@${DB_HOST}:${DB_PORT}/${DB_NAME}

# ====================
# Redis Configuration
# ====================
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_URL=redis://${REDIS_HOST}:${REDIS_PORT}
REDIS_DB=0

# ====================
# RabbitMQ Configuration
# ====================
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=admin
RABBITMQ_PASS=admin
RABBITMQ_VHOST=valueverse
RABBITMQ_URL=amqp://${RABBITMQ_USER}:${RABBITMQ_PASS}@${RABBITMQ_HOST}:${RABBITMQ_PORT}/${RABBITMQ_VHOST}

# ====================
# API Configuration
# ====================
API_HOST=0.0.0.0
API_PORT=8000
API_URL=http://localhost:8000
WS_URL=ws://localhost:8000
API_PREFIX=/api/v1
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# ====================
# Frontend Configuration
# ====================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_WS_URL=ws://localhost:8000
NEXT_PUBLIC_APP_NAME=ValueVerse
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ====================
# Supabase Configuration
# ====================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================
# Authentication & Security
# ====================
JWT_SECRET=your-super-secret-jwt-key-min-32-characters-change-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MINUTES=1440
SESSION_SECRET=your-session-secret-key-change-in-production
ENCRYPTION_KEY=your-encryption-key-for-sensitive-data
API_KEY_SALT=your-api-key-salt-for-hashing

# ====================
# OAuth Providers (Optional)
# ====================
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GITHUB_CLIENT_ID=
GITHUB_CLIENT_SECRET=
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=

# ====================
# Monitoring & Observability
# ====================
GRAFANA_USER=admin
GRAFANA_PASSWORD=admin
PROMETHEUS_PORT=9090
JAEGER_AGENT_HOST=jaeger
JAEGER_AGENT_PORT=6831
JAEGER_COLLECTOR_ENDPOINT=http://jaeger:14268/api/traces
ENABLE_METRICS=true
ENABLE_TRACING=true
ENABLE_PROFILING=false

# ====================
# Service Discovery
# ====================
CONSUL_HOST=consul
CONSUL_PORT=8500
CONSUL_SCHEME=http
SERVICE_DISCOVERY_ENABLED=true

# ====================
# Payment Processing (Optional)
# ====================
STRIPE_SECRET_KEY=sk_test_...
STRIPE_PUBLISHABLE_KEY=pk_test_...
STRIPE_WEBHOOK_SECRET=whsec_...
STRIPE_PRICE_ID=price_...
PAYPAL_CLIENT_ID=
PAYPAL_CLIENT_SECRET=
PAYMENT_CURRENCY=USD

# ====================
# Email Configuration (Optional)
# ====================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=
SMTP_PASS=
SMTP_FROM_EMAIL=noreply@valueverse.ai
SMTP_FROM_NAME=ValueVerse Platform
EMAIL_ENABLED=false

# ====================
# SMS Configuration (Optional)
# ====================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=
SMS_ENABLED=false

# ====================
# AI Services (Optional)
# ====================
OPENAI_API_KEY=sk-...
OPENAI_ORGANIZATION=
OPENAI_MODEL=gpt-4
ANTHROPIC_API_KEY=
COHERE_API_KEY=
AI_ENABLED=false
AI_PROVIDER=openai

# ====================
# Storage Configuration (Optional)
# ====================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-west-2
AWS_S3_BUCKET=valueverse-uploads
STORAGE_PROVIDER=local
STORAGE_LOCAL_PATH=/app/uploads

# ====================
# Rate Limiting
# ====================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000
RATE_LIMIT_PER_DAY=10000

# ====================
# Feature Flags
# ====================
FEATURE_BILLING_ENABLED=true
FEATURE_AI_AGENTS_ENABLED=true
FEATURE_NOTIFICATIONS_ENABLED=true
FEATURE_ANALYTICS_ENABLED=true
FEATURE_EXPORT_ENABLED=true
FEATURE_MULTI_TENANT_ENABLED=false

# ====================
# Development Settings
# ====================
HOT_RELOAD=true
DEBUG_SQL=false
MOCK_EXTERNAL_SERVICES=false
SEED_DATABASE=true
ENABLE_SWAGGER=true
ENABLE_GRAPHQL=false

# ====================
# Production Settings
# ====================
# Uncomment these for production deployment
# NODE_ENV=production
# LOG_LEVEL=error
# DEBUG=false
# HOT_RELOAD=false
# SEED_DATABASE=false
# ENABLE_SWAGGER=false
# SSL_ENABLED=true
# SSL_CERT_PATH=/etc/ssl/certs/
# SSL_KEY_PATH=/etc/ssl/private/
# FORCE_HTTPS=true
# SECURE_COOKIES=true
# CSRF_PROTECTION=true

# ====================
# Backup Configuration
# ====================
BACKUP_ENABLED=false
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=valueverse-backups
BACKUP_LOCAL_PATH=/backups

# ====================
# Health Check
# ====================
HEALTH_CHECK_INTERVAL=30
HEALTH_CHECK_TIMEOUT=10
HEALTH_CHECK_RETRIES=3

